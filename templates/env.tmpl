{{ .Header }}

package {{ .Package }}

{{ if or (gt (len .Deny) 0) (gt (len .Allow) 0) -}}
import (
	"fmt"
	"os"
)

func {{ .Name }}() (string, error) {
	v := os.Getenv({{ printf "%q" .Key }})

	{{- if gt (len .Deny) 0 }}
	{{ template "deny" . }}
	{{- end }}

	{{- if gt (len .Allow) 0 }}
	{{ template "allow" . }}
	{{- else }}
	return v, nil
	{{- end }}

{{- else -}}
import "os"

func {{ .Name }}() string {
	return os.Getenv({{ printf "%q" .Key }})
{{- end }}
}
